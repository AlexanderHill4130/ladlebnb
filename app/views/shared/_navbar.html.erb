<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<!-- search box stuff -->
<nav class="navbar navbar-light bg-white mr-auto pl-0">
  <form class="form-inline ">
    <input class="form-control-sm mr-sm-2" type="search" placeholder="Location" aria-label="Location">

      <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :check_in, label: false, placeholder: 'Check in', as: :string, required: false, input_html: {class: "datepicker form-control-sm", style: "width: 120px; margin: 0 8px;"} %>
      <%= f.input :check_out, label: false,  placeholder: 'Check out', as: :string, required: false, input_html: {class: "datepicker form-control-sm", style: 'width: 120px; margin: 0 8px;'} %>

   <!--    <%= f.button :submit, "Go", class: "btn btn-primary" %> -->
    <% end %>


    <select name="guests" id="select-guests" class="form-control-sm input-sm" style="margin: 0 20px 0 8px; width: 120px;">
      <option value="1">1 person</option>
      <option value="2">2 people</option>
      <option value="3">3 people</option>
      <option value="4">4 people</option>
      <option value="5">5 people</option>
      <option value="6">6 people</option>
      <option value="7">7 people</option>
      <option value="8">8 people</option>
      </select>

  <%= link_to "Search", flats_path, class: "btn btn-outline-success btn-sm my-2 my-sm-0" %>


  </form>
</nav>

<!--  -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Become a Host", new_flat_path, class: "nav-link" %>
        </li>
        <li class="nav-item mr-2">
          <%= link_to "Dashboard", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown mr-3 pr-2">
          <%= image_tag "blank.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

