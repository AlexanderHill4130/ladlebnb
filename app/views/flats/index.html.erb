<div class="content">
<div class="cards-container">
<% @flats.each do |flat| %>
<div class="card-trip">
  <%= cl_image_tag(flat.photo,
      width: 400, height: 300, crop: :fill) %>
  <div class="card-trip-infos">
    <div>
      <h2><%= flat.title %></h2>
      <p><%= flat.address %></p>
      <%= link_to "View", flat_path(flat), class: "nav-item btn btn-ladle pt-2 mb-3 mt-3"  %>
    </div>
    <h2 class="card-trip-pricing">â‚¬<%= flat.price %>/night</h2>
  </div>
</div>
<% end %>
</div>


<div class="map-container">
  <div id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
