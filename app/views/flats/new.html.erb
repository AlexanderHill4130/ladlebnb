<h1>Create a new flat</h1>

<%= simple_form_for @flat, url: flats_path(@flat), method: :post do |f|%>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :guests_nr %>
 <!-- #insert photo -->
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
